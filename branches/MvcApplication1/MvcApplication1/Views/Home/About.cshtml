<script type="text/javascript">
    var c = document.getElementById("TestCanvas");
    var ctx = c.getContext("2d");

    var FPS = 30;

    //Ball coordinates
    var BallX = 0;
    var BallY = 0;

    //Ball Velocity
    var SpeedX = 3;
    var SpeedY = 3;

    setInterval(function () {
        update();
        draw();
    }, 1000 / FPS);

    function update() {


            //Positive Y = ball goes down
            BallX += SpeedX;
            BallY += SpeedY;
            if (BallY > 200) {
                SpeedY = SpeedY * -1;
            }
            if(BallX > 200) {
                SpeedX = SpeedX * -1;
            }
            if (BallY < 0) {
                SpeedY = SpeedY * -1;
            }
            if (BallX < 0) {
                SpeedX = SpeedX * -1;
            }
        }


    function draw() {

        //Clear Screen
        ctx.clearRect(0, 0, 200, 200);

        //Item Color
        ctx.fillStyle = "#FF0000";

        //Draw ball
        ctx.beginPath();
        ctx.arc(BallX, BallY, 10, 0, Math.PI * 2, true);
        ctx.closePath();
        ctx.fill();
        //End ball
    }
</script>
