<p>
<canvas id="TestCanvas" width="200" height="200" style="border:10px solid #0000FF;">
Canvas is not working
</canvas>
</p>

<script type="text/javascript">
    var c = document.getElementById("TestCanvas");
    var ctx = c.getContext("2d");

    var FPS = 30;
    
    //direction of ball
    var IsUp = false;
    var IsLeft = false;

    //Ball coordinates
    var BallX = 0;
    var BallY = 0;

    setInterval(function () {
        update();
        draw();
    }, 1000 / FPS);

    function update() {

        if (!IsUp) 
        {
            //Positive Y = ball goes down
            BallY += 3;
            if (BallY > 204) {
                IsUp = true ;
            }
        }
        else
        {
            BallY -= 2;
            if (BallY < 0) {
                IsUp = false;
            }
        }
        if(!IsLeft) {
            //Positive X = Ball goes right
            BallX += 4;
            if (BallX > 204) {
                IsLeft = true;
            }
        }
        else {
            BallX -= 3;
            if (BallX < 0) {
                IsLeft = false;
            }
        }
       
    }

    function draw() {

        //Clear Screen
        ctx.clearRect(0, 0, 200, 200);

        //Item Color
        ctx.fillStyle = "#FF0000";

        //Draw ball
        ctx.beginPath();
        ctx.arc(BallX, BallY, 10, 0, Math.PI * 2, true);
        ctx.closePath();
        ctx.fill();
        //End ball
    }
</script>



